<Window x:Class="MammaSpy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:MammaSpy.ViewModels"
        xmlns:local="clr-namespace:MammaSpy"
        mc:Ignorable="d"
        DataContext="{Binding MainWindowViewModel,  Source={StaticResource Locator}}"
        Title="{Binding Path=Title}" Height="326" Width="470">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="261*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Width="200" VerticalAlignment="Center"/>
        <Button Content="Load" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Grid.Row="0"/>
        <GridSplitter Height="3" Grid.Row="1" HorizontalAlignment="Stretch" ShowsPreview="True"/>
        <RichTextBox Grid.Row="2" Margin="3,3"/>
    </Grid>
</Window>
